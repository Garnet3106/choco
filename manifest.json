{
    "manifest_version": 3,
    "name": "choco",
    "version": "1.0.0",
    "icons": {
        "128": "assets/favicon_128x.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "chocoっと検索"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            }
        }
    },
    "permissions": [
        "bookmarks",
        "history",
        "storage",
        "tabs"
    ]
}
